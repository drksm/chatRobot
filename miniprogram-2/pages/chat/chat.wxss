.container {
  padding-top: 0;
  padding-bottom: 50px;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f0f0;
}

.chat-list {
  height: auto;
  flex: 1;
  flex-shrink: 1;
  overflow-y: scroll;
  padding: 10px;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  margin-bottom: 20px;
}

.message {
  display: flex;
  margin-bottom: 10px;
  justify-content: flex-start;
}

.user-info,
.robot-info {
  display: flex;
  width: 100%;
}

.user-info .message-text,
.robot-info .message-text {
  max-width: 60%;
  padding: 8px 12px;
  border-radius: 8px;
  margin: 2px 8px;
  word-wrap: break-word;
  position: relative;
}

.user-info .message-text {
  background-color: #07c160;
  color: #ffffff;
  margin-left: auto;
}

.robot-info .message-text {
  background-color: #ffffff;
  color: #000000;
  margin-right: auto;
}

.cursor {
  position: absolute;
  background-color: #000;
  width: 8px;
  height: 1em;
  animation: blink 1s infinite;
  transform: translateY(11px);
}

@keyframes blink {
  50% {
    opacity: 0;
  }
}

.user-avatar,
.robot-avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.user-avatar {
  margin-left: 8px;
}

.robot-avatar {
  margin-right: 8px;
}

.input-container {
  position: relative;
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #ffffff;
  position: fixed;
  bottom: -5px;
  width: 100%;
  z-index: 1;
}

.input {
  z-index: 1;
  margin-left: 10px;
  margin-right: 20px;
  padding-left: 10px;
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border-radius: 20px;
  background-color: #f0f0f0;
}

.send-button {
  border-radius: 20px;
  background-color: #07c160;
  color: #ffffff;
  line-height: 35px;
  text-align: center;
  padding-bottom: 35px;
}
