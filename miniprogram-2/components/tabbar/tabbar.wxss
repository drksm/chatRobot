.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 50px;
  background-color: #1e88e5;
  border-top: 1px solid #ebebeb;
}

.tab-bar-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  font-size: 14px;
  color: #999999;
}

.tab-item-text {
   font-size: 20px;
   width: 100%;
  height: 100%;
}

.tab-bar-item.active {
  color: #07c160;
}
